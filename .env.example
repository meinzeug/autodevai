# AutoDev-AI Neural Bridge Platform - Environment Configuration Template
# Copy this file to .env.production and fill in your values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=autodev_ai
DB_USER=autodev
DB_PASSWORD=your_secure_database_password_here
DATABASE_URL=postgresql://autodev:${DB_PASSWORD}@postgres:5432/autodev_ai

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
JWT_SECRET=your_jwt_secret_key_minimum_32_characters
JWT_EXPIRES_IN=24h
ENCRYPTION_KEY=your_encryption_key_for_sensitive_data
SESSION_SECRET=your_session_secret_key
BCRYPT_ROUNDS=12

# =============================================================================
# AI SERVICE INTEGRATIONS
# =============================================================================
# Claude API (Anthropic)
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-3-sonnet-20240229

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=3000
LOG_LEVEL=info
APP_NAME=AutoDev-AI Neural Bridge Platform
APP_VERSION=1.0.0

# =============================================================================
# NEURAL BRIDGE CONFIGURATION
# =============================================================================
NEURAL_BRIDGE_ENABLED=true
NEURAL_BRIDGE_MODEL=claude-3
NEURAL_LEARNING_RATE=0.001
NEURAL_MAX_CONTEXT=8192

# =============================================================================
# SANDBOX CONFIGURATION
# =============================================================================
ENABLE_SANDBOXES=true
SANDBOX_PORT_START=50010
SANDBOX_PORT_END=50090
MAX_CONCURRENT_SANDBOXES=20
SANDBOX_TIMEOUT=3600
SANDBOX_MEMORY_LIMIT=1g
SANDBOX_CPU_LIMIT=1
DOCKER_HOST=unix:///var/run/docker.sock

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_PASSWORD=your_grafana_admin_password_here
GRAFANA_PORT=3000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_MAX_SIZE=100m
LOG_MAX_FILES=10
ENABLE_REQUEST_LOGGING=true

# ELK Stack
ELASTICSEARCH_URL=http://elasticsearch:9200
KIBANA_URL=http://kibana:5601
LOGSTASH_PORT=5044

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=AutoDev-AI <noreply@yourdomain.com>

# =============================================================================
# NOTIFICATION SERVICES (Optional)
# =============================================================================
# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#autodev-alerts

# Discord Integration
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# Email Notifications
NOTIFICATION_EMAIL=admin@yourdomain.com
ALERT_EMAIL=alerts@yourdomain.com

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_ENABLED=true

# Remote Backup (S3 Compatible)
REMOTE_BACKUP_ENABLED=false
S3_BUCKET=autodev-ai-backups
S3_REGION=us-east-1
S3_ACCESS_KEY=your_s3_access_key
S3_SECRET_KEY=your_s3_secret_key

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================
SSL_ENABLED=true
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
FORCE_HTTPS=true

# =============================================================================
# RATE LIMITING & SECURITY
# =============================================================================
RATE_LIMIT_WINDOW=15min
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_API_MAX_REQUESTS=1000
ENABLE_CORS=true
CORS_ORIGIN=https://yourdomain.com

# =============================================================================
# DEVELOPMENT & DEBUGGING (Production: set to false)
# =============================================================================
DEBUG=false
ENABLE_DEBUG_ROUTES=false
ENABLE_SWAGGER=false
PERFORMANCE_MONITORING=true

# =============================================================================
# CLAUDE FLOW INTEGRATION
# =============================================================================
CLAUDE_FLOW_ENABLED=true
CLAUDE_FLOW_MAX_AGENTS=10
CLAUDE_FLOW_TOPOLOGY=mesh
HIVE_MIND_ENABLED=true
NEURAL_COORDINATION_ENABLED=true

# =============================================================================
# GITHUB INTEGRATION (Optional)
# =============================================================================
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret

# =============================================================================
# CUSTOM DOMAIN & NETWORKING
# =============================================================================
DOMAIN=yourdomain.com
EXTERNAL_URL=https://yourdomain.com
INTERNAL_NETWORK=172.20.0.0/16
TRUSTED_PROXIES=172.20.0.0/16,127.0.0.1

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
# Node.js Performance
NODE_OPTIONS=--max_old_space_size=4096
UV_THREADPOOL_SIZE=16

# Database Connection Pooling
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_ACQUIRE_TIMEOUT=60000

# Redis Connection Pooling
REDIS_POOL_MIN=1
REDIS_POOL_MAX=10

# =============================================================================
# MAINTENANCE & HEALTH CHECKS
# =============================================================================
HEALTH_CHECK_INTERVAL=30000
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System is under maintenance. Please try again later.

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_NEURAL_FEATURES=true
ENABLE_ADVANCED_SANDBOXES=true
ENABLE_REAL_TIME_COLLABORATION=true
ENABLE_API_DOCUMENTATION=true
ENABLE_METRICS_DASHBOARD=true